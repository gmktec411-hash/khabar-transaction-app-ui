/* Import Shared Page Styles */
@import '../pages/SharedPage.css';

/* Transaction Table Specific Styles */

/* Player name styling - same as other columns, no special styling */
.player-name-bold {
  font-weight: 400;
  color: var(--text-secondary);
  font-size: var(--font-sm);
}

/* Remove hover effect - make player name same as other values */
.player-name {
  color: var(--text-secondary);
  font-weight: 400;
  font-size: var(--font-sm);
}

/* Transaction Table */
.transactions-table {
  width: 100%;
  border-collapse: collapse;
  text-align: center;
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.transactions-table th {
  background: var(--primary-gradient);
  color: white;
  padding: var(--spacing-md);
  position: sticky;
  top: 0;
  cursor: pointer;
  user-select: none;
  font-size: var(--font-sm);
  font-weight: 600;
  transition: all var(--transition-normal);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.transactions-table th:hover {
  background: linear-gradient(135deg, #5568d3 0%, #6741a0 100%);
}

.transactions-table th::after {
  content: " â†•";
  opacity: 0.5;
  margin-left: 4px;
}

.transactions-table td {
  padding: var(--spacing-md);
  border-bottom: 1px solid var(--border-light);
  color: var(--text-secondary);
  font-size: var(--font-sm);
}

.transactions-table tbody tr {
  transition: all var(--transition-fast);
}

.transactions-table tbody tr:hover {
  background: var(--bg-secondary);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.transactions-table tbody tr:last-child td {
  border-bottom: none;
}

/* Text alignment */
.text-left {
  text-align: left;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

/* Player Cell */
.player-cell {
  position: relative;
}

.player-cell .player-name {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-xs);
}

/* Subject Tooltip */
.subject-tooltip {
  position: absolute;
  left: 100%;
  top: 50%;
  transform: translateY(-50%);
  margin-left: var(--spacing-xs);
  padding: 4px var(--spacing-sm);
  background: var(--info-color);
  color: white;
  border-radius: var(--radius-sm);
  font-size: 11px;
  white-space: nowrap;
  opacity: 0;
  pointer-events: none;
  transition: opacity var(--transition-fast);
  z-index: 10;
}

.player-name:hover .subject-tooltip {
  opacity: 1;
}

/* Amount Cell */
.amount-cell {
  position: relative;
  font-weight: 600;
  color: var(--text-primary);
}

/* Positive/Negative amounts */
.amount-positive {
  color: var(--success-color);
}

.amount-negative {
  color: var(--error-color);
}

/* Count Badge */
.count-badge {
  display: inline-block;
  margin-left: var(--spacing-xs);
  padding: 2px var(--spacing-xs);
  background: var(--bg-tertiary);
  color: var(--text-tertiary);
  border-radius: var(--radius-sm);
  font-size: 11px;
  font-weight: 600;
}

/* Pagination */
.pagination-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: var(--spacing-lg);
  gap: var(--spacing-md);
}

.pagination-button {
  padding: var(--spacing-sm) var(--spacing-lg);
  background: var(--primary-gradient);
  color: white;
  border: none;
  border-radius: var(--radius-md);
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-normal);
  box-shadow: var(--shadow-primary);
}

.pagination-button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
}

.pagination-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.pagination-info {
  font-size: var(--font-sm);
  color: var(--text-tertiary);
  font-weight: 500;
}

/* Search Highlight */
.highlight {
  background: rgba(255, 235, 59, 0.4);
  font-weight: 600;
  padding: 2px 4px;
  border-radius: 3px;
}

/* App Type Badge */
.app-badge {
  display: inline-block;
  padding: 4px var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.app-badge-ca {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
}

.app-badge-ve {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
}

.app-badge-ch {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: white;
}

.app-badge-pp {
  background: linear-gradient(135deg, #8b5cf6, #7c3aed);
  color: white;
}

.app-badge-sk {
  background: linear-gradient(135deg, #ec4899, #db2777);
  color: white;
}

.app-badge-default {
  background: linear-gradient(135deg, #64748b, #475569);
  color: white;
}

/* Responsive Table */
@media (max-width: 1024px) {
  .transactions-table {
    font-size: 13px;
  }

  .transactions-table th,
  .transactions-table td {
    padding: 10px 8px;
  }
}

@media (max-width: 768px) {
  .transactions-table {
    font-size: 12px;
  }

  .transactions-table th,
  .transactions-table td {
    padding: 8px 6px;
  }

  .subject-tooltip {
    display: none;
  }
}
